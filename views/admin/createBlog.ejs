<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css"
        integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- costume css -->
    <link rel="stylesheet" href="/styles.css">
    <title>ENSAnews | Home</title>
</head>

<body>
    <header>
        <%- include ('../partials/header.ejs') %>
    </header>
    <section>
        <div class="container newBlog">
            <form action="/admin/createBlog" method="POST" class="title" enctype="multipart/form-data">
                <div class="input-field">
                    <i class="material-icons prefix">format_size</i>
                    <input type="text" id="name" name="title" class="" required>
                    <label for="name">Title...</label>
                </div>
                <div class="carousel carousel-slider center">
                    <div class="carousel-fixed-item center">
                        <div class="file-field input-field">
                            <div class="btn-floating add_btn">
                                <i class="material-icons white indigo-text">add</i>
                                <input type="file" name="img" required>
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item indigo lighten-4 white-text" href="#one!">
                        <h2>Add your cover</h2>
                        <p class="white-text">here add your picture of your blog</p>
                    </div>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">format_quote</i>
                    <input type="text" id="snippet" name="snippet" class="snippet" required >
                    <label for="snippet">snippet...</label>
                </div>
                <div class="post-content">
                    <div class="input-field">
                        <i class="material-icons prefix">format_align_justify</i>
                        <textarea name="body" id="body" class="materialize-textarea body"></textarea>
                        <label for="comment">body...</label>
                    </div>
                </div>
                <div class="input-field center">
                    <button class="btn indigo indigo-darken4">add post</button>
                    <input type="reset" class="btn red lighten-1 indigo-darken4" required>
                </div>
            </form>
            <!-- divider -->
            <div class="divider"></div>
        </div>
    </section>

    <footer class="page-footer grey darken-3">
        <%- include ('../partials/footer.ejs') %>
    </footer>
    <!-- jquey -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <!-- sidenav and nav script  -->
    <script>
        $(document).ready(function () {
            $('.sidenav').sidenav();
            $('.carousel.carousel-slider').carousel({
                fullWidth: true,
                indicators: true
            });
        });
    </script>
</body>

</html>