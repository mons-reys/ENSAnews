<section class="section container" id="contact">
    <h4 class="center">leave a comment </h4>
    <div class="row">
        <div class="col s12 l8 offset-l2">
            <form action="/blog/details/<%=blog._id %>" method="POST">
                <div class="input-field">
                    <i class="material-icons prefix">person</i>
                    <input type="text" id="titel" name="title" class="">
                    <label for="title">title</label>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">email</i>
                    <input type="text" id="snippet" name="snippet" class="">
                    <label for="email">snippet</label>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">message</i>
                    <textarea name="blogContent" id="blogContent" class="materialize-textarea"></textarea>
                    <label for="blogContent">Your message</label>
                </div>
                <div class="input-field center">
                    <button class="btn indigo indigo-darken4">add</button>
                </div>
            </form>
        </div>
    </div>
</section>