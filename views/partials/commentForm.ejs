<section class="section container" id="contact">
    <h4 class="center">leave a comment </h4>
    <div class="row">
        <div class="col s12 l8 offset-l2">
            <form action="/blog/details/<%=blog._id %>" method="POST" class="comments-form">
                <div class="input-field">
                    <i class="material-icons prefix">person</i>
                    <input type="text" id="name" name="name" class="">
                    <label for="name">Your name</label>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">email</i>
                    <input type="email" id="email" name="email" class="">
                    <label for="email">Your email</label>
                </div>
                <div class="input-field">
                    <i class="material-icons prefix">message</i>
                    <textarea name="commentContent" id="comment" class="materialize-textarea commentContent"></textarea>
                    <label for="comment">Your message</label>
                </div>
                <div class="input-field center">
                    <button class="btn indigo indigo-darken4">submit</button>
                </div>
            </form>
        </div>
    </div>
</section>